#include <stdio.h>
int main() {
int i,j,sum=0,a,b,n;
scanf("%d",&n);
for(i=0;i < n;i++){
    scanf("%d %d",&a,&b);
    if(n==0){
        sum=0;
        printf("%d\n",sum);
    }
    else if(a < b){
        for(j=a+1;sum=0,j<b;j++){
            if(j%2==1 || j%2==-1){
                sum+=j;
            } 
        }
			printf("%d\n",sum);
    }
    else{
        for(j=b+1;sum=0,j<a;j++){
            if(j%2==1 || j%2==-1){
                sum+=j;
            } 
        }
			printf("%d\n",sum);
    }
}
return 0;
}
